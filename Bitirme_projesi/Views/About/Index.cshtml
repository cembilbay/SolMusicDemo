@model List<EntityLayer.Concrate.About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<style>
    /* Banner Section */
    .banner-section {
        padding: 60px 0;
        background-image: url('https://png.pngtree.com/background/20210710/original/pngtree-blue-cartoon-music-rock-banner-background-picture-image_1006777.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        display: flex;
        flex-direction: column;
        height:auto;
        justify-content: center;
        height:500px;
        max-height: 500px; /* Yüksekliği istediğiniz değerle değiştirin */
    }

        /* Hakkımızda Başlığı */
        .banner-section h1 {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

    .custom-breadcrumb {
        color: black;
        margin-top: 1rem;
    }

    /* About Section Styling */
    .about-section {
        padding: 30px 0;
    }

        .about-section h2 {
            font-size: 2rem;
            margin-bottom: 1rem;
            line-height: 1.5;
        }

        .about-section p {
            font-size: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .about-section .row > div {
            margin-bottom: 1.5rem;
        }

    /* About Image Styling */
    .about-image {
        max-width: 70%;
        height: auto;
        border-radius: 50%;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.5);
    }
</style>

<body>

    <!-- Navbar -->
    <section class="banner-section">
        <div class="container text-center">
            <h1 class="display-3 text-uppercase text-black mb-3">Hakkımızda</h1>
            <div class="d-inline-flex custom-breadcrumb">
                <h6 class="m-0"><a class="text-black" href="/Homepage/Index">Anasayfa</a></h6>
                <h6 class="text-body m-0 px-3">/</h6>
                <h6 class="text-body m-0">Hakkımızda</h6>
            </div>
        </div>
    </section>

    @foreach (var item in Model)
    {
        <section class="container about-section">
            <div class="row">
                <div class="col-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                    <h2 class="text-dark mb-4 text-break">@item.AboutName1</h2>
                    <p class="lead mb-4">@item.AboutContent1</p>
                    <hr class="my-4 border-dark w-50 rounded">
                </div>
            </div>
            <div class="container-fluid mx-0">
                <div class="row mb-5">
                    <div class="col-12 col-sm-6">
                        <img src="@item.AboutImage" class="img-fluid about-image" alt="About Image" />
                    </div>
                    <div class="col-12 col-sm-6">
                        <h2 class="mb-4 text-break">@item.AboutName2</h2>
                        <p class="text-muted mb-4">@item.AboutContent2</p>
                    </div>
                </div>
            </div>
        </section>
    }

    <!-- Bootstrap JS and Popper.js (required for Bootstrap components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-H8zJU9V9XnepUpndrZXDTR7K9IixMh1jU9wPHa0qVZc/ur1Uq2egawtupFqWQh2D" crossorigin="anonymous"></script>

</body>
