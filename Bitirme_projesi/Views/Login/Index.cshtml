@model UserSignInViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<body>
    <section class="mt-5 mb-5">
        <div class="container mt-5">
            <h3 class="text-center mt-5">Oturum Aç</h3>
            <div class="row justify-content-center">
                <div class="login p-5 bg-light mx-auto mw-100">
                    <form method="post">
                        <div class="form-group">
                            <label for="exampleInputEmail1 mt-5">Kullanıcı Adınız</label>
                            <input type="text" class="form-control" asp-for="@Model.username" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="" required="">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1 mt-5">Şifre</label>
                            <input type="password" class="form-control" asp-for="@Model.password" id="exampleInputPassword1" placeholder="" required="">
                        </div>
                        <div class="form-check pb-2">
                            <input type="checkbox" class="form-check-input" id="exampleCheck1">
                            <label class="form-check-label" for="exampleCheck1">Beni hatırla</label>
                        </div>
                        <button type="submit" class="btn btn-primary submit mb-2">Giriş yap</button>
                        <p class="mb-3 mt-3">Hesabın yok mu? <a href="/Register/Index" style="color: #fc0254 !important; ">Hemen Kaydol</a></p>
                        <p class="text-muted mb-5"><a href="#" style="color: #007BFF; text-decoration: none; transition: color 0.3s;">Şifremi Unuttum <i class="fas fa-question-circle"></i></a></p>
                    </form>
                </div>
            </div>
        </div>
    </section>

</body>


