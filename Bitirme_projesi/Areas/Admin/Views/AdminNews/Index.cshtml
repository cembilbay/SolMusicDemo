@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrate.News>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="container">
    <h2>Haberler</h2>
    <a class="btn btn-outline-info" href="/Admin/AdminNews/Add/">Yeni Haber Ekle</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>İçerik</th>
                <th>Oluşturulma Tarhi</th>
                <th>Durum</th>
                <th>İşlem</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model)
            {
                <tr>
                    <td>@news.NewsID</td>
                    <td>@news.NewsTitle</td>
                    <td>@news.NewsContent</td>
                    <td>@news.NewsCreateTime</td>
                    <td>@news.NewsStatus</td>
                    <td>
                    <td><a class="btn btn-outline-success" asp-action="Edit" asp-controller="AdminNews" asp-route-id="@news.NewsID">Düzenle</a></td>
                    <td>
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-controller="AdminNews" asp-route-id="@news.NewsID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="pagination-container">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>

