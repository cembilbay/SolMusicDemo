@model Bitirme_projesi.Areas.Admin.Models.NewsViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<h1>Haberi Düzenle</h1>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="form-horizontal">
        <input type="hidden" asp-for="NewsID" value="@ViewBag.NewsID" />
       
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="NewsID" />

        <div class="form-group">
            <label asp-for="NewsTitle" class="control-label">Haber Başlığı</label>
            <input asp-for="NewsTitle" class="form-control" />
            <span asp-validation-for="NewsTitle" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewsContent" class="control-label">Haber İçeriği</label>
            <textarea asp-for="NewsContent" class="form-control"></textarea>
            <span asp-validation-for="NewsContent" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="NewsImage" class="control-label">Haber Resmi</label>
            <input asp-for="NewsImage" type="file" class="form-control" />
            <span asp-validation-for="NewsImage" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="kaydet" class="btn btn-primary" />
            <a href="/Admin/AdminNews/Index/" class="btn btn-secondary">Listeye Geri Dön</a>
        </div>
    </div>
</form>

